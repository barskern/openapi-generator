/// Convert input into a base path, e.g. "http://example:123". Also checks the scheme as it goes.
fn into_base_path(input: &str, correct_scheme: Option<&'static str>) -> Result<String, ClientInitError> {
    // First convert to Uri, since a base path is a subset of Uri.
    let uri = Uri::from_str(input).map_err(ClientInitError::InvalidUri)?;

    let scheme = uri.scheme_str().ok_or(ClientInitError::InvalidScheme)?;

    // Check the scheme if necessary
    if let Some(correct_scheme) = correct_scheme {
        if scheme != correct_scheme {
            return Err(ClientInitError::InvalidScheme);
        }
    }

    let host = uri.host().ok_or_else(|| ClientInitError::MissingHost)?;
    let port = uri.port_u16().map(|x| format!(":{}", x)).unwrap_or_default();
    Ok(format!("{}://{}{}", scheme, host, port))
}

/// A client that implements the API by making HTTP calls out to a server.
pub struct Client<F> where
  F: Future<Output=Result<hyper::Response<hyper::Body>, hyper::Error>> + Send + 'static {
    client_service: Arc<Box<dyn hyper::service::Service<hyper::Request<hyper::Body>, Response=hyper::Response<hyper::Body>, Error=hyper::Error, Future=F> + Send + Sync>>,
    base_path: String,
}

impl<F> fmt::Debug for Client<F> where
   F: Future<Output=Result<hyper::Response<hyper::Body>, hyper::Error>> + Send + 'static {
    fn fmt(&self, f: &mut fmt::Formatter) -> fmt::Result {
        write!(f, "Client {{ base_path: {} }}", self.base_path)
    }
}

impl<F> Clone for Client<F> where
   F: Future<Output=Result<hyper::Response<hyper::Body>, hyper::Error>> + Send + 'static {
    fn clone(&self) -> Self {
        Client {
            client_service: self.client_service.clone(),
            base_path: self.base_path.clone()
        }
    }
}

impl Client<hyper::client::ResponseFuture> {

    /// Create an HTTP client.
    ///
    /// # Arguments
    /// * `base_path` - base path of the client API, i.e. "www.my-api-implementation.com"
    pub fn try_new_http(base_path: &str) -> Result<Client<hyper::client::ResponseFuture>, ClientInitError> {
        let http_connector = hyper::client::HttpConnector::new();
        Self::try_new_with_connector::<hyper::client::HttpConnector>(
            base_path,
            Some("http"),
            http_connector,
        )
    }

    /// Create a client with a TLS connection to the server.
    ///
    /// # Arguments
    /// * `base_path` - base path of the client API, i.e. "www.my-api-implementation.com"
    /// * `ca_certificate` - Path to CA certificate used to authenticate the server
    pub fn try_new_https<CA>(
        base_path: &str,
        ca_certificate: native_tls::Certificate,
    ) -> Result<Client<hyper::client::ResponseFuture>, ClientInitError>
    where
        CA: AsRef<Path>,
    {
        let mut builder: native_tls::TlsConnectorBuilder = native_tls::TlsConnector::builder();
        builder.add_root_certificate(ca_certificate);
        let mut connector = hyper_tls::HttpsConnector::new().unwrap();
        connector.https_only(true);
        let connector = (connector, builder.build().unwrap()).into();

        Self::try_new_with_connector::<hyper_tls::HttpsConnector<hyper::client::HttpConnector>>(
            base_path,
            Some("https"),
            connector,
        )
    }

    /// Create a client with a mutually authenticated TLS connection to the server.
    ///
    /// # Arguments
    /// * `base_path` - base path of the client API, i.e. "www.my-api-implementation.com"
    /// * `ca_certificate` - Path to CA certificate used to authenticate the server
    /// * `client_key` - Path to the client private key
    /// * `client_certificate` - Path to the client's public certificate associated with the private key
    pub fn try_new_https_mutual<CA, K, C>(
        base_path: &str,
        ca_certificate: native_tls::Certificate,
        client_key: native_tls::Identity,
    ) -> Result<Client<hyper::client::ResponseFuture>, ClientInitError>
    {
        let mut builder: native_tls::TlsConnectorBuilder = native_tls::TlsConnector::builder();
        builder.add_root_certificate(ca_certificate);
        builder.identity(client_key);
        let mut connector = hyper_tls::HttpsConnector::new().unwrap();
        connector.https_only(true);
        let connector = (connector, builder.build().unwrap()).into();
        Self::try_new_with_connector::<hyper_tls::HttpsConnector<hyper::client::HttpConnector>>(
            base_path,
            Some("https"),
            connector,
        )
    }

    /// Create a client with a custom implementation of hyper::client::connect::Connect.
    ///
    /// Intended for use with custom implementations of connect for e.g. protocol logging
    /// or similar functionality which requires wrapping the transport layer. When wrapping a TCP connection,
    /// this function should be used in conjunction with
    /// `hyper::{http_connector, https_connector, https_mutual_connector}`.
    ///
    /// For ordinary tcp connections, prefer the use of `try_new_http`, `try_new_https`
    /// and `try_new_https_mutual`, to avoid introducing a dependency on the underlying transport layer.
    ///
    /// # Arguments
    ///
    /// * `handle` - tokio reactor handle to use for execution
    /// * `base_path` - base path of the client API, i.e. "www.my-api-implementation.com"
    /// * `protocol` - Which protocol to use when constructing the request url, e.g. `Some("http")`
    /// * `connector` - Implementation of `hyper::client::connect::Connect`
    pub fn try_new_with_connector<C>(
        base_path: &str,
        protocol: Option<&'static str>,
        connector: C,
    ) -> Result<Client<hyper::client::ResponseFuture>, ClientInitError>
    where
        C: hyper::service::Service<hyper::client::connect::Destination, Response=(tokio_net::tcp::TcpStream, hyper::client::connect::Connected)> + Send + Sync,
    {
        let client_service = Box::new(hyper::Client::builder().build(connector));

        Ok(Client {
            client_service: Arc::new(client_service),
            base_path: into_base_path(base_path, protocol)?,
        })
    }
}

impl<F> Client<F> where
    F: Future<Output=Result<hyper::Response<hyper::Body>, hyper::Error>> + Send + 'static
{
    /// Constructor for creating a `Client` by passing in a pre-made `hyper` client Service.
    ///
    /// This allows adding custom wrappers around the underlying transport, for example for logging.
    pub fn try_new_with_client_service(client_service: Arc<Box<dyn hyper::service::Service<hyper::Request<hyper::Body>, Response=hyper::Response<hyper::Body>, Error=hyper::Error, Future=F>>>,
                                       base_path: &str)
                                    -> Result<Client<F>, ClientInitError>
    {
        Ok(Client {
            client_service: client_service,
            base_path: into_base_path(base_path, None)?,
        })
    }
}

